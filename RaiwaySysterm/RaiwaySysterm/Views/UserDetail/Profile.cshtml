@model IEnumerable<RaiwaySysterm.Models.UserDetail>
@{
    ViewData["Title"] = "Table";
   
}
<div>
    @Html.ActionLink("Create", "Create", "UserDetail")
</div>
<main>
    <div class="container-fluid">
        <h1 class="mt-4">Profile</h1>
        <div class="card mb-4">

            <div class="card-body">
                @using (Html.BeginForm())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Full Name</th>
                                   
                                    <th>Account name</th>
                                    <th>Password</th>
                                    
                                    <th>Gender</th>
                                    <th>Age</th>
                                    <th>IsAdmin</th>
                                 
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.FullName</td>
                                        <td>@item.NameAccount</td>
                                        <td>@item.Password</td>
                                        <td>@item.Gender</td>
                                        <td>@item.Age</td>
                                        <td>@item.Role</td>
                                        
                                        <td>
                                            @Html.ActionLink("Detail", "Details", "UserDetail", new { id = item.UserID }) |
                                            @Html.ActionLink("Update", "Update", "UserDetail", new { id = item.UserID }) |
                                            @Html.ActionLink("Delete", "Delete", new { userId = item.UserID }, new { onclick = "return confirm('Are you sure?')" })
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                }

            </div>

        </div>
    </div>
</main>


